;; Restore the behavior where text automatically inserts physical
;; spaces to line up with the headline text.
(setq org-adapt-indentation t)

(defun my/fix-org-indent-behavior ()
  ;; 1. Disable electric-indent-mode so RET is just a newline
  (electric-indent-local-mode -1)
  
  ;; 2. Bind C-j to the new equivalent of the obsolete command
  ;; We wrap (org-return t) in a lambda so it can be used as a keybinding
  (local-set-key (kbd "C-j") (lambda () (interactive) (org-return t)))

  ;; 3. Enable visual line mode (soft word wrapping)
  (visual-line-mode 1))

(add-hook 'org-mode-hook 'my/fix-org-indent-behavior)

